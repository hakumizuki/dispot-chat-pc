.main-chat
  .main-chat__header
    .main-chat__header__left-box
      .main-chat__header__left-box__group-name
        = @group.name
      %ul.main-chat__header__left-box__members
        Members :
        - @group.users.each do |user|
          %li
            = user.name
      %ul.main-chat__header__left-box__invited-users
        Invited Members :
        %li
          user3
        %li
          user4
    = link_to edit_group_path(@group), class: "main-chat__header__edit-btn" do
      Edit
  .main-chat__messages
    = render @messages
  .main-chat__text-form
    %ul.main-chat__text-form__left-box
      %li.clipboard-icon
        %a
          = icon('far', 'clipboard')
      %li.search-btn
        %a
          = icon('fas', 'search')
      %li
        %a
          = icon('far', 'star')
      %li
        %a
          = icon('fas', 'link')
      %li
        %a
          = icon('fas', 'image')
    .main-chat__text-form__right-box
      = form_for [@group, @message], remote: true do |f|
        = f.text_area :content, class: 'text-field', placeholder: 'type a message...' 
        .image-icon__mask
          = f.label :image, class: 'image-icon__mask__label' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'image-icon__mask__label__file'
        = f.submit 'Send', class: 'submit-btn'
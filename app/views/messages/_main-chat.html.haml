.main-chat

  .main-chat__header
    .main-chat__header__left-box
      .main-chat__header__left-box__group-name
        Timpos
      %ul.main-chat__header__left-box__members
        Members :
        %li
          user1
        %li
          user2
      %ul.main-chat__header__left-box__invited-users
        Invited Members :
        %li
          user3
        %li
          user4
    .main-chat__header__edit-btn
      Edit

  .main-chat__messages

  .main-chat__text-form
    %ul.search-mode-btns
      %li.clipboard-icon
        = link_to group_notes_path(@group) do
          = icon('far', 'clipboard')
      %li.search-btn
        %a
          = icon('fas', 'search')
      %li
        %a
          = icon('far', 'star')
      %li
        %a
          = icon('fas', 'link')
      %li
        %a
          = icon('fas', 'image')
    .main-chat__text-form__right-box
      = form_for [@group, @message] do |f|
        = f.text_area :content, class: 'text-field', placeholder: 'type a message...' 
        .image-icon__mask
          = f.label :image, class: 'image-icon__mask__label' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'image-icon__mask__label__file'
        = f.submit 'Send', class: 'submit-btn'
